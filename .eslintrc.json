{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": false,
            "modules": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "allowForLoopAfterthoughts": "off",
        "no-plusplus": "off",
        "no-restricted-syntax": "off",
        "max-len": "warn",
        "object-curly-newline": "off",
        "jsx-indent": "off"
    }
}